{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "pretty": true,
    "declaration": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": [
      "es2018"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
