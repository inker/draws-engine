{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "declaration": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "lib": [
      "ESNext",
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
